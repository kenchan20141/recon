    <script>
        // --- FIREBASE CONFIG ---
        const firebaseConfig = {
            apiKey: "AIzaSyBQ1AegbgEDvksAivyHFWA_1DrIDoRcWqw",
            authDomain: "detector-1f676.firebaseapp.com",
            databaseURL: "https://detector-1f676-default-rtdb.firebaseio.com",
            projectId: "detector-1f676",
            storageBucket: "detector-1f676.firebasestorage.app",
            messagingSenderId: "801506387434",
            appId: "1:801506387434:web:4b51c9edbde5c0facf3e93"
        };
        firebase.initializeApp(firebaseConfig);
        const database = firebase.database();

        let sessionId = ""; 

        const getDateId = () => {
            const now = new Date();
            const pad = n => n.toString().padStart(2, '0');
            return `${now.getFullYear()}-${pad(now.getMonth()+1)}-${pad(now.getDate())}_${pad(now.getHours())}-${pad(now.getMinutes())}-${pad(now.getSeconds())}`;
        };

        // --- PASSWORD AUTHENTICATION (NEW) ---
        async function checkPassword(inputPwd) {
            try {
                // 讀取 admin/password 路徑
                const snapshot = await database.ref('admin/password').once('value');
                if (snapshot.exists()) {
                    const realPwd = snapshot.val();
                    return inputPwd === realPwd;
                } else {
                    alert("錯誤：資料庫中未設定 admin/password，請聯繫管理員。");
                    return false;
                }
            } catch (error) {
                console.error(error);
                alert("連接資料庫失敗，請檢查網絡或 Firebase 規則。");
                return false;
            }
        }

        // --- CUSTOM MODAL LOGIC ---
        function showCustomPrompt(message, type = 'password') {
            return new Promise((resolve) => {
                const modal = document.getElementById('custom-modal');
                const msgEl = document.getElementById('modal-msg');
                const inputEl = document.getElementById('modal-input');
                const confirmBtn = document.getElementById('modal-confirm-btn');
                const cancelBtn = document.getElementById('modal-cancel-btn');

                msgEl.innerText = message;
                inputEl.type = type;
                inputEl.value = '';
                inputEl.placeholder = type === 'password' ? 'ACCESS CODE' : 'SESSION NAME';
                
                modal.classList.add('active');
                
                const close = (val) => {
                    modal.classList.remove('active');
                    confirmBtn.onclick = null;
                    cancelBtn.onclick = null;
                    inputEl.onkeydown = null;
                    resolve(val);
                };

                confirmBtn.onclick = () => close(inputEl.value);
                cancelBtn.onclick = () => close(null);
                
                inputEl.onkeydown = (e) => {
                    if (e.key === 'Enter') close(inputEl.value);
                    if (e.key === 'Escape') close(null);
                };
            });
        }

        // --- CORE STATE ---
        const video = document.getElementById('webcam');
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        const viewport = document.getElementById('viewport');
        const timeoutBar = document.getElementById('timeout-bar');
        const alarmAudio = document.getElementById('alarm-sound');
        const logDisplay = document.getElementById('log-display');

        const state = {
            isRunning: false,
            isToilet: false,
            toiletVisits: 0,
            model: null,
            animId: null,
            prevFrameData: null,
            
            lastLiveTimestamp: 0,
            sessionEndTime: 0,
            lastAlarmType: null,
            integrityCheckInterval: null,
            hasViolated: false,
            
            // OPTIMIZATION: Throttling vars
            lastProcessTime: 0,
            currentPredictions: [], // Cache predictions for smooth drawing
            currentPersonCount: 0,
            currentMotionScore: 100
        };
        
        // OPTIMIZATION: Process AI only every 200ms (5 FPS) instead of 60 FPS
        const PROCESS_INTERVAL = 200; 

        const config = {
            minPeople: 1,
            maxToiletVisits: 3,
            toiletDuration: 5, 
            sessionMinutes: 60,
            timeoutMs: 5000,
            motionThreshold: 0.5 
        };

        const diffCanvas = document.createElement('canvas');
        diffCanvas.width = 64; diffCanvas.height = 48;
        const diffCtx = diffCanvas.getContext('2d', { willReadFrequently: true });

        // --- INIT ---
        async function init() {
            try {
                // Ensure backend is WebGL for performance
                await tf.setBackend('webgl');
                state.model = await cocoSsd.load();
                document.getElementById('loading-msg').style.display = 'none';
                document.getElementById('firebase-status').innerText = "DB Connected";
            } catch (e) {
                console.error(e);
                document.getElementById('loading-msg').innerText = "AI FAILED";
            }
        }
        init();

        // --- START/STOP ACTIONS (ASYNC) ---
        async function attemptStart() {
            const pwd = await showCustomPrompt("SYSTEM AUTHENTICATION");
            if (!pwd) return;

            document.getElementById('firebase-status').innerText = "Verifying...";
            const isAuth = await checkPassword(pwd);
            
            if (isAuth) {
                const inputName = await showCustomPrompt("SESSION IDENTIFIER", "text");
                if (inputName && inputName.trim() !== "") {
                    sessionId = inputName.trim().replace(/[.#$/[\]]/g, "_");
                } else {
                    sessionId = getDateId();
                }
                document.getElementById('firebase-status').innerText = "Session ID: " + sessionId;
                startSystem();
            } else {
                alert("密碼錯誤 / ACCESS DENIED");
                document.getElementById('firebase-status').innerText = "Auth Failed";
            }
        }

        async function attemptStop() {
            const pwd = await showCustomPrompt("TERMINATION CODE");
            if (!pwd) return;

            const isAuth = await checkPassword(pwd);
            if(isAuth) {
                stopSystem(false);
            } else {
                alert("密碼錯誤 / ACCESS DENIED");
            }
        }

        // --- SYSTEM CONTROL ---
        async function startSystem() {
            if (!state.model) return;
            try {
                const stream = await navigator.mediaDevices.getUserMedia({
                    video: {
                        width: 640, 
                        height: 480,
                        frameRate: { ideal: 30 } // Limit input FPS to save battery
                    }, 
                    audio: false
                });
                video.srcObject = stream;
                
                video.onloadedmetadata = () => {
                    canvas.width = video.videoWidth;
                    canvas.height = video.videoHeight;
                    
                    state.isRunning = true;
                    state.hasViolated = false;
                    state.lastLiveTimestamp = Date.now(); 
                    state.sessionEndTime = Date.now() + (config.sessionMinutes * 60 * 1000);
                    
                    updateUI(true);
                    
                    localStorage.setItem('monitor_active', 'true');
                    startIntegrityCheck();

                    loop();
                };
            } catch(e) { alert("無法存取攝像頭"); }
        }

        function stopSystem(isAuto = false) {
            state.isRunning = false;
            cancelAnimationFrame(state.animId);
            stopAlarm();
            clearInterval(state.integrityCheckInterval);
            
            if(video.srcObject) video.srcObject.getTracks().forEach(t => t.stop());
            ctx.clearRect(0,0,canvas.width,canvas.height);
            updateUI(false);

            const conclusion = state.hasViolated ? "測驗結束 - 過程中有違規紀錄" : "測驗結束 - 完美通過 (無違規)";
            const reason = isAuto ? "時間到自動停止" : "使用者手動停止";
            logToCloud("測驗結論", `${conclusion} (${reason})`, true);
        }

        function updateUI(active) {
            document.getElementById('btn-start').disabled = active;
            document.getElementById('btn-stop').disabled = !active;
            document.getElementById('btn-toilet').disabled = !active;
            document.getElementById('led-status').className = active ? "led on" : "led";
            document.getElementById('text-status').innerText = active ? "MONITORING" : "TERMINATED";
            if(active) viewport.classList.add('active'); else viewport.classList.remove('active', 'alert');
            timeoutBar.style.width = active ? "100%" : "0%";
        }

        // --- LOOP & LOGIC (OPTIMIZED) ---
        async function loop() {
            if (!state.isRunning) return;
            if (state.isToilet) { state.animId = requestAnimationFrame(loop); return; }

            const now = Date.now();
            const timeLeft = state.sessionEndTime - now;
            updateTimer(timeLeft);

            if (timeLeft <= 0) {
                stopSystem(true);
                alert("測驗時間結束");
                return;
            }

            // 1. Clear Canvas
            ctx.clearRect(0,0,canvas.width,canvas.height);

            // 2. Heavy Processing (Throttled)
            if (now - state.lastProcessTime > PROCESS_INTERVAL) {
                state.lastProcessTime = now;

                // AI Detection
                const predictions = await state.model.detect(video);
                state.currentPredictions = predictions; // Cache for drawing
                
                // Motion Detection
                state.currentMotionScore = calculateMotion();

                // Count People
                let count = 0;
                predictions.forEach(p => { if(p.class === 'person') count++; });
                state.currentPersonCount = count;

                // Check Status Logic
                checkStatus(state.currentPersonCount, state.currentMotionScore, now);
            }

            // 3. Draw Cached Results (Runs every frame for smoothness)
            state.currentPredictions.forEach(p => {
                if(p.class === 'person') drawBox(p);
            });

            // Update Timeout Bar visual based on elapsed time
            updateTimeoutBar(now);

            state.animId = requestAnimationFrame(loop);
        }

        function checkStatus(personCount, motionScore, now) {
            const isConditionMet = (personCount >= config.minPeople) && (motionScore > config.motionThreshold);

            if (isConditionMet) {
                state.lastLiveTimestamp = now;
                stopAlarm(); 
                document.getElementById('text-status').innerText = `MONITORING (P:${personCount})`;
            }
        }

        function updateTimeoutBar(now) {
            const elapsed = now - state.lastLiveTimestamp;
            const barPct = Math.max(0, (config.timeoutMs - elapsed) / config.timeoutMs) * 100;
            timeoutBar.style.width = barPct + "%";
            timeoutBar.style.backgroundColor = barPct < 30 ? "var(--secondary-color)" : "var(--primary-color)";

            // Trigger alarm logic (check only when throttling update happens or check here efficiently)
            // It's safe to check logic triggers here as elapsed time is continuous
            if (elapsed > config.timeoutMs) {
                let reason = "";
                let dbReason = "";

                if (state.currentPersonCount < config.minPeople) {
                    reason = `人數不足 (${state.currentPersonCount}/${config.minPeople})`;
                    dbReason = `違規：人數不足`;
                } 
                else if (state.currentMotionScore <= config.motionThreshold) {
                    reason = `偵測到靜態畫面/照片欺騙`;
                    dbReason = `違規：偵測到靜態畫面/照片欺騙`;
                }

                if (reason !== "") {
                    triggerAlarm(`違規：${reason} (已持續5秒)`, dbReason);
                }
            }
        }

        // --- ALARM & LOGGING ---
        function triggerAlarm(uiMsg, dbMsg) {
            if (!dbMsg) dbMsg = uiMsg;

            document.getElementById('text-status').innerText = "⚠ " + uiMsg;
            viewport.classList.add('alert');
            document.getElementById('led-status').className = "led err";
            timeoutBar.style.width = "0%";

            if (state.lastAlarmType !== uiMsg) {
                logToCloud("警報", dbMsg, true); 
                state.lastAlarmType = uiMsg;
                state.hasViolated = true;
            }
            if(alarmAudio.paused) { alarmAudio.currentTime = 0; alarmAudio.play().catch(()=>{}); }
        }

        function stopAlarm() {
            if(!alarmAudio.paused) alarmAudio.pause();
            state.lastAlarmType = null;
            viewport.classList.remove('alert');
            document.getElementById('led-status').className = "led on";
        }

        function logToCloud(category, msg, saveToDb = false) {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('zh-TW', { hour12: false });

            if (saveToDb) {
                const div = document.createElement('div');
                div.className = "log-entry";
                div.innerHTML = `<span style="color:#666">[${timeStr}]</span> ${category}: ${msg}`;
                logDisplay.appendChild(div);
                logDisplay.scrollTop = logDisplay.scrollHeight;

                database.ref('sessions/' + sessionId + '/logs').push({
                    time: timeStr,
                    type: category,
                    details: msg
                });
            }
        }

        // --- ANTI-TAMPER ---
        function startIntegrityCheck() {
            state.integrityCheckInterval = setInterval(() => {
                if (!localStorage.getItem('monitor_active')) {
                    logToCloud("嚴重違規", "Local Storage 被刪除", true);
                    localStorage.setItem('monitor_active', 'true');
                    state.hasViolated = true;
                }
            }, 2000);
        }

        document.addEventListener("visibilitychange", () => {
            if (state.isRunning && !state.isToilet && document.hidden) {
                logToCloud("嚴重違規", "切換分頁/隱藏視窗", true);
                triggerAlarm("警告：請勿離開頁面");
                state.hasViolated = true;
            }
        });

        // --- HELPERS (Micro-Motion Detection) ---
        function calculateMotion() {
            diffCtx.drawImage(video, 0, 0, 64, 48);
            const data = diffCtx.getImageData(0,0,64,48).data;
            if(!state.prevFrameData) { state.prevFrameData = data; return 100; }
            
            let diffPixels = 0;
            const totalPixels = data.length / 4;

            for(let i=0; i<data.length; i+=4) {
                // High Sensitivity: Pixel diff > 3
                if(Math.abs(data[i+1] - state.prevFrameData[i+1]) > 3) { 
                    diffPixels++;
                }
            }
            state.prevFrameData = data;
            return (diffPixels / totalPixels) * 100;
        }

        function drawBox(p) {
            const [x,y,w,h] = p.bbox;
            ctx.strokeStyle = "var(--primary-color)"; ctx.lineWidth = 3; ctx.strokeRect(x,y,w,h);
        }

        function updateTimer(ms) {
            if(ms < 0) ms = 0;
            const m = Math.floor(ms / 60000);
            const s = Math.floor((ms % 60000) / 1000);
            const el = document.getElementById('session-timer-display');
            el.innerText = `${m}:${s.toString().padStart(2,'0')}`;
            if(m < 5) el.style.color = "var(--secondary-color)";
        }

        // --- SETTINGS TOGGLE (ASYNC AUTH) ---
        async function toggleSettings() {
            const panel = document.getElementById('settings-panel');
            if (!panel.classList.contains('open')) {
                const pwd = await showCustomPrompt("ADMIN ACCESS REQUIRED");
                if (!pwd) return;

                const isAuth = await checkPassword(pwd);
                if (isAuth) {
                    panel.classList.add('open');
                } else {
                    alert("密碼錯誤 / ACCESS DENIED");
                }
            } else {
                panel.classList.remove('open');
            }
        }

        // 當輸入框改變時自動更新設定
        function updateConfig() {
            config.minPeople = parseInt(document.getElementById('cfg-person').value) || 1;
            config.sessionMinutes = parseInt(document.getElementById('cfg-duration').value) || 60;
            config.toiletDuration = parseInt(document.getElementById('cfg-toilet-dur').value) || 5;
            config.maxToiletVisits = parseInt(document.getElementById('cfg-toilet-max').value) || 3;
            
            if(state.isRunning) {
                state.sessionEndTime = Date.now() + (config.sessionMinutes * 60 * 1000);
            }
        }

        // --- TOILET ---
        let tInt = null;
        function requestToilet() {
            if(state.toiletVisits >= config.maxToiletVisits) { alert("已達次數上限"); return; }
            if(!confirm("確定要去廁所？將開始計時。")) return;

            state.isToilet = true;
            state.toiletVisits++;
            document.getElementById('toilet-count').innerText = state.toiletVisits;
            stopAlarm();
            
            const toiletScreen = document.getElementById('toilet-screen');
            const toiletTimer = document.getElementById('toilet-timer');
            toiletScreen.style.display = 'flex';
            
            let t = config.toiletDuration * 60;
            const updateT = (s) => toiletTimer.innerText = `${Math.floor(s/60)}:${(s%60).toString().padStart(2,'0')}`;
            updateT(t);
            
            tInt = setInterval(()=>{
                t--; updateT(t);
                if(t<=0) {
                    clearInterval(tInt);
                    toiletScreen.style.display = 'none';
                    state.isToilet = false;
                    state.lastLiveTimestamp = Date.now();
                    logToCloud("違規", "如廁超時", true);
                    triggerAlarm("如廁超時");
                    state.hasViolated = true;
                }
            }, 1000);

            document.getElementById('btn-return-early').onclick = () => {
                clearInterval(tInt);
                toiletScreen.style.display = 'none';
                state.isToilet = false;
                state.lastLiveTimestamp = Date.now();
                loop();
            };
        }

        window.addEventListener('beforeunload', (e)=>{ if(state.isRunning){ e.preventDefault(); e.returnValue=''; } });

    </script>
</body>
</html>
